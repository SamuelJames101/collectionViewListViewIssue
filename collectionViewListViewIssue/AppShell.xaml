<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="collectionViewListViewIssue.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:collectionViewListViewIssue"
    Shell.FlyoutBehavior="Disabled"
    Title="collectionViewListViewIssue">

    <TabBar>
        <Tab Route="ListView" Title="ListView">
            <ShellContent
                Title="ListView"
                ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <Tab Route="CollectionView" Title="CollectionView">
            <ShellContent
                Title="CollectionView"
                ContentTemplate="{DataTemplate local:CollectionVIew}"/>
        </Tab>

    </TabBar>
</Shell>
